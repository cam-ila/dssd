<p id="notice"><%= notice %></p>

<h1>Incident Replacements</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incident_replacements.each do |incident_replacement| %>
      <tr>
        <td><%= incident_replacement.description %></td>
        <td><%= incident_replacement.amount %></td>
        <td><%= link_to 'Show', incident_replacement %></td>
        <td><%= link_to 'Edit', edit_incident_replacement_path(incident_replacement) %></td>
        <td><%= link_to 'Destroy', incident_replacement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

