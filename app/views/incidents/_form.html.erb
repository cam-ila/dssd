<%= form_for(incident) do |f| %>
  <% if incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
        <% incident.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p></p>
  <form>
    <div class="form-group">
      <%= f.label :client_number, "Numero de Cliente" %>
      <%= f.number_field :client_number, class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :incident_type, "Tipo de Incidente" %>
      <%= f.text_field :incident_type , class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :description, "Descripcion" %>
      <%= f.text_area :description , class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :incident_state, "Estado" %>
      <%= f.text_field :incident_state , class: 'form-control'%>
    </div>


    <p></p>
    <div class="replacements">
      <%= f.fields_for :replacements do |replacement| %>
        <%= render 'replacement_fields',  f: replacement %>
      <% end %>
      <div class="links">
        <%= link_to_add_association 'Agregar repuesto', f, :replacements, class: 'btn btn-light'%>
      </div>
    </div>
    <p></p>
    <div class="actions">
      <%= f.submit 'Crear Incidente', class: "btn btn-info" %>
    </div>
  </form>
<% end %>
