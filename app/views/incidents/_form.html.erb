      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :client_number %>
    <%= f.number_field :client_number %>
  </div>

  <div class="field">
    <%= f.label :incident_type %>
    <%= f.text_field :incident_type %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <%= f.fields_for :replacements do |replacement| %>
