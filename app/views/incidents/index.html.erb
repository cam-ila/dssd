<div class= "container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<p id="notice"><%= notice %></p>
			<h1 class="text-center">Incidents</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">Client number</th>
						<th scope="col">Incident type</th>
						<th scope="col">Description</th>
						<th scope="col">State</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @incidents.each do |incident| %>
						<tr>
							<td><%= incident.client_number %></td>
							<td><%= incident.incident_type %></td>
							<td><%= incident.description %></td>
							<td><%= incident.incident_state %></td>
							<td><%= link_to 'Show', incident %></td>
							<td><%= link_to 'Edit', edit_incident_path(incident) %></td>
							<td><%= link_to 'Destroy', incident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

			<br>

			<%= link_to 'New Incident', new_incident_path, class:'btn btn-light' %>
		</div>
		<div class="col-md-2"></div>
	</div>
</div>
